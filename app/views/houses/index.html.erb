<div>
  <div>
    <h1>
      List of all houses
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new house
    </h2>
    <% if current_user != nil %>
      <form action="/insert_house" method="post">

        <label for="rooms_count_box"> House Name: </label>

        <input type="text" id="rooms_count_box" name="query_house_name">

        <button class="btn btn-outline-primary"> Add </button>
      </form>
    <% else %>
      <p> You must be <a href="/users/sign_in">signed in</a> to add a House </p>
    <% end %>
  </div>
</div>

<hr>
<div>
  <div>
    <% if current_user != nil %>
      
      <div class="row">
      
        <% @list_of_houses.each do |a_house| %>
          <div class="col-md-4">
            <div class="card mb-4">
              <div class="card-body">
                <h5 class="card-title"><%= a_house.house_name %></h5>
                <p class="card-text">Created <%= time_ago_in_words(a_house.created_at) %> ago</p>
                <p class="card-text">Updated <%= time_ago_in_words(a_house.updated_at) %> ago</p>
                <a href="/houses/<%= a_house.id %>" class="btn btn-primary">Show Details</a>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    <% else %>
      <p> You must be <a href="/users/sign_in">signed in</a> to view the existing houses </p>

    <%end%>

  </div>
</div>

<hr>
