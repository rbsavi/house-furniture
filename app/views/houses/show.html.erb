<div>
  <a href="/houses">
    Go back
  </a>
</div>

<div>
  <a href="/delete_house/<%= @the_house.id %>">
    Delete house
  </a>
</div>

<hr>

<h1 class="text-primary">
  <%= @the_house.house_name %>
</h1>

<div>
  <form action="/modify_house/<%= @the_house.id %>"  method="post" >
    <div class="row g-3">
      <div class="col-sm-3">
        <input type="text" class="form-control" placeholder="<%= @the_house.house_name %>" aria-label="<%= @the_house.house_name %>" value="<%= @the_house.house_name %>" name="query_house_name">
      </div>
      <button class="btn btn-primary"> Edit </button>
    </div>
  </form>
</div>

<div>
  <p></p>
</div>

<div>
  <form action="/insert_room" method="post">
    <div class="row g-3">
      <div class="col-sm-3">
        <input type="text" class="form-control" placeholder="Add another room to <%= @the_house.house_name %> " aria-label="Room Name" name="query_room_name" >
      </div>
      <button class="btn btn-primary"> Add </button>
    </div>
    <input type="hidden" id="house_id_box" name="query_house_id" value="<%= @the_house.id %>">
  </form>
</div>

<hr>

<h1 class="text-primary">
  <%= @the_house.house_name %> Rooms
</h1>
<br>
<div class="row">

  <% @the_house.rooms.each do |a_room| %>

    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"> <%= a_room.room %></h5>
          <a href="/rooms/<%= a_room.id %>" class="btn btn-primary">Show Details</a>
        </div>
      </div>

    </div>

  <% end %>

</div>
