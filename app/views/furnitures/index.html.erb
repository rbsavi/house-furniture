<div>
  <div>
    <h1>
      List of all furnitures
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new furniture
    </h2>

    <form action="/insert_furniture" method="post">
      <div>
        <label for="item_box">
          Item
        </label>

        <input type="text" id="item_box" name="query_item">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price">
      </div>

      <div>
        <label for="rating_box">
          Rating
        </label>

        <input type="text" id="rating_box" name="query_rating">
      </div>

      <div>
        <input type="checkbox" id="purchased_box" name="query_purchased" value="1">

        <label for="purchased_box">Purchased</label>
      </div>

      <div>
        <label for="room_id_box">
          Room
        </label>

        <input type="text" id="room_id_box" name="query_room_id">
      </div>

      <button>
        Create furniture
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Item
        </th>

        <th>
          Image
        </th>

        <th>
          Description
        </th>

        <th>
          Price
        </th>

        <th>
          Rating
        </th>

        <th>
          Purchased
        </th>

        <th>
          Room
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_furnitures.each do |a_furniture| %>
      <tr>
        <td>
          <%= a_furniture.id %>
        </td>

        <td>
          <%= a_furniture.item %>
        </td>

        <td>
          <%= a_furniture.image %>
        </td>

        <td>
          <%= a_furniture.description %>
        </td>

        <td>
          <%= a_furniture.price %>
        </td>

        <td>
          <%= a_furniture.rating %>
        </td>

        <td>
          <%= a_furniture.purchased %>
        </td>

        <td>
          <%= a_furniture.room_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_furniture.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_furniture.updated_at) %> ago
        </td>

        <td>
          <a href="/furnitures/<%= a_furniture.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
