<div>
  <div>
    <h1>
      Furniture #<%= @the_furniture.id %> details
    </h1>

    <div>
      <div>
        <a href="/furnitures">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_furniture/<%= @the_furniture.id %>">
          Delete furniture
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Item
      </dt>
      <dd>
        <%= @the_furniture.item %>
      </dd>

      <dt>
        Image
      </dt>
      <dd>
        <img src=<%= @the_furniture.image %> style="width 100px;">
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_furniture.description %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @the_furniture.price %>
      </dd>

      <dt>
        Rating
      </dt>
      <dd>
        <%= @the_furniture.rating %>
      </dd>

      <dt>
        Purchased
      </dt>
      <dd>
        <%= @the_furniture.purchased %>
      </dd>

      <dt>
        Room
      </dt>
      <dd>
        <%= @the_furniture.room_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_furniture.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_furniture.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit furniture
    </h2>

    <form action="/modify_furniture/<%= @the_furniture.id %>"  method="post" >
      <div>
        <label for="item_box">
          Item
        </label>

        <input type="text" id="item_box" name="query_item" value="<%= @the_furniture.item %>">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_furniture.image %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_furniture.description %>">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price" value="<%= @the_furniture.price %>">
      </div>

      <div>
        <label for="rating_box">
          Rating
        </label>

        <input type="text" id="rating_box" name="query_rating" value="<%= @the_furniture.rating %>">
      </div>

      <div>
        <input type="checkbox" id="purchased_box" name="query_purchased" value="1" <%= "checked" if @the_furniture.purchased %>>

        <label for="purchased_box">
            Purchased
        </label>
      </div>

      <div>
        <label for="room_id_box">
          Room
        </label>

        <input type="text" id="room_id_box" name="query_room_id" value="<%= @the_furniture.room_id %>">
      </div>

      <button>
        Update furniture
      </button>
    </form>
  </div>
</div>

<hr>
